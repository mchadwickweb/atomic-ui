{
  "name": "atomic-ui",
  "version": "0.0.1",
  "description": "UI library of atomic components and primitives",
  "main": "index.js",
  "repository": "git@github.com:mchadwickweb/atomic-ui.git",
  "author": "Michael Chadwick <michael@interactstudio.co.uk>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "start": "cd website && yarn dev",
    "clean": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:core": "node ./esbuild.js",
    "build": "npm-run-all clean build:types build:core"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "esbuild": "^0.14.49",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2"
  }
}
